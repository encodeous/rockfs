@model RockFS.Models.Auth.EmailModel

@{
    ViewBag.Title = "RockFS | Resend Confirmation Email";
    ViewData["R-Title"] = "RockFS | Account Activation";
    Layout = "_Layout";
}
<div class="d-flex justify-content-center w-100">
    <form asp-action="ActivateAccount" method="post">
        <h2>Resend email confirmation.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control  form-dark" autocomplete="email" aria-required="true" />
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-outline-dark btn-light">Send Email</button>
    </form>
</div>